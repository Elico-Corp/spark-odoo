<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<!-- wizard picking tracking form view  jon.chow#elico-corp.com Jun 25, 2013-->
        <record id="wizard_picking_tracking_form_2" model="ir.ui.view">
            <field name="name">wizard_order_split_2</field>
            <field name="model">wizard.order.split</field>
            <field name="arch" type="xml">
                <form string="Sale order split Wizard" version="7.0">
                    <!-- <field name="so_id" invisible="1"/> -->
                    <group col="4">
                    	<field name="partner_id"  colspan="2" readonly="1"/>
                    	<field name="sale_shipment_id"  colspan="2"/>
<!--               	<field name="other_order" colspan="2" create="0" domain="[('partner_id','=',partner_id),('state','=','draft')]" context="{'default_partner_id':partner_id}"/>
                    <field name="other_order" colspan="2" create="0" domain="[('partner_id','=',partner_id),('id','!=',so_id),('state','=','draft')]" context="{'default_partner_id':partner_id}"/> -->
                    </group>
                    <group col="4" string="Sale Order Line">
                    	<field name='active_all' on_change="onchange_active_all(active_all,lines)" colspan='1'/>
                    	<field name="lines" colspan="4" nolabel="1">
                    		<tree create="0" editable='1'>	
                                <!-- <field name="sol_id" invisible="1" domain="[('order_id','=',so_id)]" widget="selection"/> -->
                                <field name='active'/>
                    			<field name="sol_id" invisible="1" widget="selection"/>
                    			<field name="product_id"/>
                    			<field name="product_qty"/>
                    			<field name='final_qty'/>
                    			<field name="product_state"/>
                    		</tree>
                    	</field>
                    </group>
                    <footer>
                    	<button name="split_new_order" string="Confirm order" type="object" class="oe_highlight"/>
                        <!--
                        <button name="move_order_line" string="Move To Other Order" type="object" class="oe_highlight"/>  
                        <button name="back_order_line" string="Back TO Orign" 		type="object" class="oe_highlight"/>
                        -->
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <!-- wizard action  jon.chow#elico-corp.com Jun 25, 2013 -->
        <act_window id="action_wizard_order_split_2" 
            name="Confirm order" 
        	multi="True"
            key2="client_action_multi" 
            res_model="wizard.order.split" 
            src_model="sale.order" 
            view_id="wizard_picking_tracking_form_2"
            target="new" 
            view_mode="tree,form" 
            view_type="form"/>
    	
    </data>
</openerp>