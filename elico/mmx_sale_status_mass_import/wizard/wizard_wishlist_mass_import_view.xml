<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>
<record id="wizard_wishlist_mass_import_from_view" model="ir.ui.view">
    <field name="name">wishlist.mass.import.form</field>
    <field name="model">wizard.wishlist.mass.import</field>
    <field name="arch" type="xml">
        <form string="Wishlist Mass Import" version="7.0">
          <group>
            <group>
              <field name="date" />
              <field name="shop_id" />
            </group>
          </group>
          <group>
            <field name="import_file" />
          </group>
          <group>
            <field name="log_message" readonly="1"/>
          </group>
          <footer>
            <button name="check_import_valid" string="Check Import Valid" type="object" class="oe_highlight"/>
            <button name="force_import" string="Import" type="object" class="oe_highlight"/>
              or
            <button string="Cancel" class="oe_link" special="cancel"/>
          </footer>
        </form>
    </field>
</record>

<act_window id="action_wizard_wishlist_mass_import" 
    name="Mass Import Wishlist" 
    multi="False" 
    key2="client_action_multi" 
    res_model="wizard.wishlist.mass.import" 
    src_model="sale.order.line" 
    view_id="wizard_wishlist_mass_import_from_view" 
    view_mode="form" 
    target="new"/>

<!-- menu for mass importing wishlist -->
<menuitem action="action_wizard_wishlist_mass_import" name='Mass Import Wishlists'  id="menu_mass_import_wishlist" parent="mmx_magento.menu_online_sale" sequence="3" groups="base.group_sale_salesman,base.group_sale_manager"/>
    
</data>
</openerp>