<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
        <record model="ir.module.category" id="model_sale_shipment_category">
            <field name="name">Sale Shipment</field>
            <field name="sequence">1</field>
        </record>
        <record id="group_sale_shipment_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="model_sale_shipment_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_sale_salesman'))]"/>
        </record>
        <record id="group_sale_shipment_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="model_sale_shipment_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_sale_manager'))]"/>
        </record>
        <record id="group_sale_shipment_company_rules_1" model="res.groups">
            <field name="name">MMX TO JAPAN</field>
            <field name="category_id" ref="model_sale_shipment_category"/>
        </record>
        <record id="group_sale_shipment_company_rules_2" model="res.groups">
            <field name="name">MMX TO MIX</field>
            <field name="category_id" ref="model_sale_shipment_category"/>
        </record>
        <record id="group_sale_shipment_company_rules_3" model="res.groups">
            <field name="name">MMX TO MAX</field>
            <field name="category_id" ref="model_sale_shipment_category"/>
        </record>
        <record id="group_sale_shipment_company_rules_4" model="res.groups">
            <field name="name">MMX TO OTHERS</field>
            <field name="category_id" ref="model_sale_shipment_category"/>
        </record>
    </data>
    <data noupdate="0">
    <!-- multi -->
        <record model="ir.rule" id="sale_shipment_m2j_rule">
            <field name="name">Sale Shipment MMX TO JAPAN</field>
            <field name="model_id" search="[('model','=','sale.shipment')]" model="ir.model"/>
            <field name="global" eval="False"/>
            <field name="groups" eval="[(4, ref('sale_shipment.group_sale_shipment_company_rules_1'))]"/>
            <field name="domain_force">[('company_rule','=','mmx2japan')]</field>
        </record>
        <record model="ir.rule" id="sale_shipment_m2m_rule">
            <field name="name">Sale Shipment MMX TO MIX</field>
            <field name="model_id" search="[('model','=','sale.shipment')]" model="ir.model"/>
            <field name="global" eval="False"/>
            <field name="groups" eval="[(4, ref('sale_shipment.group_sale_shipment_company_rules_2'))]"/>
            <field name="domain_force">[('company_rule','=','mmx2mix')]</field>
        </record>
        <record model="ir.rule" id="sale_shipment_m2j_rule">
            <field name="name">Sale Shipment MMX TO MAX</field>
            <field name="model_id" search="[('model','=','sale.shipment')]" model="ir.model"/>
            <field name="global" eval="False"/>
            <field name="groups" eval="[(4, ref('sale_shipment.group_sale_shipment_company_rules_3'))]"/>
            <field name="domain_force">[('company_rule','=','mmx2max')]</field>
        </record>
        <record model="ir.rule" id="sale_shipment_m2o_rule">
            <field name="name">Sale Shipment MMX TO OTHERS</field>
            <field name="model_id" search="[('model','=','sale.shipment')]" model="ir.model"/>
            <field name="global" eval="False"/>
            <field name="groups" eval="[(4, ref('sale_shipment.group_sale_shipment_company_rules_1'))]"/>
            <field name="domain_force">[('company_rule','=','mmx2others')]</field>
        </record>
</data>
</openerp>
