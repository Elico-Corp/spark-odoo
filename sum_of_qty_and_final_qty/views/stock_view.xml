<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_move_picking_tree" model="ir.ui.view">
            <field name="name">stock.move.tree</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='product_qty']" position="attributes">
                    <attribute name="sum">Total Qty</attribute>
                </xpath>
            </field>
        </record>
        <record id="view_picking_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_lines']" position="before">
                    <div class="oe_right">
                        <label string="Total:" for="stock_picking_line_count"/>
                        <field name="stock_picking_line_count" class="oe_inline"/>
                    </div>
                </xpath>
            </field>
        </record>
        <record id="view_picking_in_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking.in</field>
            <field name="inherit_id" ref="stock.view_picking_in_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_lines']" position="before">
                    <div class="oe_right">
                        <label string="Total:" for="stock_picking_line_count"/>
                        <field name="stock_picking_line_count" class="oe_inline"/>
                    </div>
                </xpath>
            </field>
        </record>
        <record id="view_picking_out_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking.out</field>
            <field name="inherit_id" ref="stock.view_picking_out_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_lines']" position="before">
                    <div class="oe_right">
                        <label string="Total:" for="stock_picking_line_count"/>
                        <field name="stock_picking_line_count" class="oe_inline"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
